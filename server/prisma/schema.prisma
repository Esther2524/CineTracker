// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int         @id @default(autoincrement())
  auth0Id     String      @unique  // Unique identifier from Auth0
  email       String      @unique
  name        String
  collection  Collection?
  collectionId Int?       // Optional field to explicitly store the collection ID
}
// picture


model Collection {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  movies   Movie[]
  user     User   @relation(fields: [userId], references: [id])
}



model Movie {
  id           Int      @id @default(autoincrement())
  apiId        Int      @unique
  title        String
  description  String
  releaseDate  DateTime
  rating       Float?
  review       String?
  collectionId Int
  collection   Collection @relation(fields: [collectionId], references: [id])
  // Other fields from the API (e.g., genre, poster_path) can be added as needed
}
